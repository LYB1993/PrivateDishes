/* pages/shop/index.wxss */
.container {
  background-repeat:no-repeat;
   background-size:cover;
  }

.shop-head {
  height: 34%;
}

.shop-head .back image {
  height: 100px;
  width: 100%;
  filter: grayscale(70%);
}

.shop-head .title {
  position: relative;
  top: -40px;
  height: 135px;
  border: solid 0.5rem rgba(255, 255, 255, 0.048);
  background-color: rgb(255, 255, 255);
  margin: 0 0.5rem 0.5rem 0.5rem;
  border-radius: 0.375rem;
  box-shadow: 1px 1px 1px rgb(0, 0, 0, 0.2), -1px 1px 1px rgb(0, 0, 0, 0.2);
}

.shop-head .title .details {
  height: 50%;
  display: flex;
  flex-wrap: nowrap;
  max-width: 100%;
}

.shop-head .title .details image {
  width: 20%;
  height: 100%;
}

.item-body {
  width: 80%;
}

.item-title {
  font-size: 22px;
  font-weight: bold;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 0.2rem 0 0.2rem 0;
}

.favorites {
  border: solid 0.085rem rgba(0, 0, 0, 0.267);
  border-radius: 0.275rem;
  padding: 0.02rem 1rem 0.02rem 1rem;
  margin-left: 1rem;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mid {
  height: 30%;
}

.mid text {
  color: rgba(0, 0, 0, 0.692);
  font-size: 14px;
  margin-top: 5px;
}


.down text {
  border: solid red 1px;
  font-size: 12px;
  color: red;
  border-radius: 0.375rem;
  padding: 0px 5px 0px 5px;
}

.shop-body {
  width: 100%;
  height: 66%;
}

.shop-tab {
  height: 82rpx;
  white-space: nowrap;
}

.shop-tab .tab {
  display: inline-block;
  padding: 0 10px;
  font-size: 18px;
  vertical-align: top;
}

.shop-tab .active {
  font-weight: bold;
}

.shop-tab .sub {
  width: 56rpx;
  height: 6rpx;
  background-color: #f1de33;
  position: absolute;
  top: 70rpx;
  transition: left .5s;
}

.content {
  height: 100%;
  width: 100%;
  display: flex;
  font-size: 18px;
}

.content .left {
  background-color: rgba(0, 0, 0, 0.041);
  width: 20%;
  padding-top: 30px;
  padding-left: 2px;
}

.content .left .item {
  height: 35px;
  margin: 5px 0px 5px 0px;
  color: rgba(134, 134, 134, 0.822);
  font-size: small;
  display: flex;
  align-items: center;
  justify-content: center;
}

.content .left .active {
  background-color: rgba(253, 253, 253, 0.822);
  font-weight: bold;
  color: black;
}

.content .right {
  padding-left: 10px;
  width: 80%;
}

.content .right .item {
  display: flex;
}


.content .right .item image {
  width: 120px;
  height: 120px;
}



.content .right .item .describes {
  margin-left: 5px;
}

.content .right .item .describes .title {
  padding: 2px 0 2px 0;
  font-size: 18px;
  font-weight: bold;
}

.content .right .item .describes .comments {
  font-size: 12px;
  font-weight: 500;
  color: #fcb76d;
}

.content .right .item .describes .comments text {
  margin-right: 10px;
  background-color: #fffae4;
  border-radius: 0.375rem;
  padding: 0px 5px 0px 5px;
}

.content .right .item .describes .sales text {
  color: rgba(0, 0, 0, 0.308);
  font-size: 12px;
}

.content .right .item .describes .preferential text {
  color: #f6948d;
  font-size: 11px;
  border: solid 2px #fce0de;
  border-radius: 0.375rem;
  padding: 0px 5px 0px 5px;
}

.content .right .item .describes .price {
  color: #f05e55;
}

.content .right .item .describes .price .cost {
  color: rgba(0, 0, 0, 0.308);
  font-size: 11px;
  text-decoration: line-through;
  margin-left: 5px;
}

.add{
  float: right;
  color: black;
  background-color: rgb(255, 219, 16);
  border-radius: 0.375rem;
  font-size: 1.2em;
  font-weight: bold;
}